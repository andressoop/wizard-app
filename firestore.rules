service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    match /projects/{project} {
      allow read, update, delete: if request.auth.uid == resource.data.uid;
      allow create: if request.auth.uid != null && request.resource.data.name != null && request.resource.data.name != '';      

      match /tasks/{task} {
      	allow read, update, delete;
      	allow create: if request.auth.uid != null && request.resource.data.name != null && request.resource.data.name != '';
      }

      match /lists/{list} {
      	allow read, delete;
      	allow create: if request.auth.uid != null && request.resource.data.name != null && request.resource.data.name != '';
        allow update: if request.auth.uid != null && request.resource.data.name != null && request.resource.data.name != '';
      }
    }

    match /clients/{client} {
      allow read, update, delete: if request.auth.uid == resource.data.uid;
      allow create: if request.auth.uid != null && request.resource.data.name != null && request.resource.data.name != '';
    }

  }
}